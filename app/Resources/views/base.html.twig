<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title %}Medusa{% endblock %}</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <!-- Bootstrap 4.1.3 -->
        <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
        <!-- START ADDITIONAL CSS SCRIPTS -->
        {% block stylesheets %}{% endblock %}
        <!-- END ADDITIONAL CSS SCRIPTS -->
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

    <section class="jumbotron text-center">
        <div class="container">
            {% for flash_message in app.session.flashBag.get('success') %}
                <div class="alert alert-success" role="alert">{{ flash_message }}</div>
            {% endfor %}
            {% for flash_message in app.session.flashBag.get('info') %}
                <div class="alert alert-info" role="alert">{{ flash_message }}</div>
            {% endfor %}
            {% for flash_message in app.session.flashBag.get('warning') %}
                <div class="alert alert-warning" role="alert">{{ flash_message }}</div>
            {% endfor %}
            {% for flash_message in app.session.flashBag.get('error') %}
                <div class="alert alert-danger" role="alert">{{ flash_message }}</div>
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
    </section>

        <!-- REQUIRED JS SCRIPTS -->
        <!-- jQuery 3 -->
        <script src="//cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js"></script>
        <!-- Bootstrap 4.1.3 -->
        <script src="//cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
        <!-- START ADDITIONAL JS SCRIPTS -->
        {% block javascripts %}{% endblock %}
        <!-- END ADDITIONAL JS SCRIPTS -->
    </body>
</html>
